<div class="home">
 <nav class="navbar">
   <h1 class="title-pokedex">Pokedex</h1>
   <div class="grey-content">
     <div id="carre"></div>
   </div>
   <div class="big-button"></div>
    <div class="small-button">
      <div class="small-button-1"></div>
      <div class="small-button-2"></div>
      <div class="small-button-3"></div>
    </div>
   <div class="filtre">
    <button type="button" class="btn btn-secondary" id="fil">Filtre</button>
    <button type="button" class="btn btn-secondary" id="fil">Filtre</button>
    <button type="button" class="btn btn-secondary" id="fil">Filtre</button>
   </div>
   <%= link_to root_path do %>
     <button type="button" class="btn btn-secondary" id="back">Back</button>
    <% end %>
 </nav>
 <div class="main-container" data-controller="card">
  <div class="list">
    <% @pokemons.each_with_index do |pokemon, index| %>
      <% break if index >= 10 %>
      <%= render 'shared/pokemon_bubble', pokemon: pokemon %>
    <% end %>
  </div>
  <div class="pokemon-card" data-card-target="location">
    <%= render 'shared/pokemon_card', pokemon: Pokemon.last, shine: false, revealed: true %>
  </div>
</div>
