<div class="chat-container" data-controller="message" data-message-sentences-value="<%= pokemon.sentences %>">
  <div class="chat-info">
    <%= image_tag 'vegeta.png', :class => "avatar-custom-2" %>
    <%# <%= cl_image_tag(Pokemon.last.photo.key, class: "avatar-custom-2") %>
    <h3><%= pokemon.last.name.capitalize %></h3>
  </div>
  <div class="chat" data-message-target="messages">
  </div>
  <div class="send">
    <form  data-action="submit->message#send" autocomplete="off">
      <input data-message-target="input" type="text" name="message" placeholder="Type your message..." />
      <button type="submit">Send</button>
    </form>
  </div>
</div>
