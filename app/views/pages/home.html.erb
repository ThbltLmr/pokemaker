  <div class="position-relative" data-controller="home">
    <div class="d-flex flex-row vw-100 vh-100 bg-black position-absolute top-0 start-0" style="z-index: 10;" data-action="click->home#reveal click->home-music#playMusic" data-home-music-url-param="<%= asset_path('audio-ville.mp3') %>">
      <div class="w-30 bg-black curtain-right">
        <%= image_tag 'red-pixel.png', class: 'img-sizing' %>
      </div>
      <div class="w-40 bg-black d-flex flex-column">
        <div class="d-flex flex-column h-60 d-inline-block bg-black align-items-center justify-content-center">
          <div class= "title-top"><%= image_tag 'title-top.png' %></div>
          <div><%= image_tag 'background-idÃ©e6.jpg', size: 200, class: "rounded-circle" %></div>
          <div class= "title-bot"><%= image_tag 'bot-title.png' %></div>
        </div>
        <div class= "d-flex flex-row h-40 gap-3 p-5 bg-black curtain-bot">
        <%= image_tag 'gengar.gif', class: 'img-sizing' %>
        <%= image_tag 'charizard.gif', class: 'img-sizing' %>
        </div>
      </div>
      <div class="w-30 curtain-left">
        <%= image_tag 'misty-pixel.png', class: 'img-sizing' %>
      </div>
    </div>
    <%#= render 'shared/pokemon_card' %>

    <div data-controller="home-map" id="home-map" class="position-absolute top-0 start-0 map-background" style="z-index: 9;">
      <div id="pokelab" data-home-map-target="item" data-url="/pokemons/new" data-intersected="false"></div>
      <div id="pokedex" data-home-map-target="item" data-url="/pokemons/new" data-intersected="false"></div>
      <div id="home-profil" data-home-map-target="item" data-url="/profile" data-intersected="false"></div>
      <div id="map-pokeworld" data-home-map-target="item" data-url="/pokemons/new" data-intersected="false"></div>
