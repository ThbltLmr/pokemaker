      <div class="d-flex flex-row chen-avatar">
        <h1>Chen's Lab</h1>
        <%= image_tag 'chen-avatar5.gif', size: 80, class: "rounded-circle" %>
      </div>
      <div class="d-flex flex-row justify-content-center map-redirection">
        <%= image_tag 'map-pokeworld.png', size: 100, class: "rounded-circle" %>
        <h1>MAP</h1>
      </div>
      <%= image_tag 'pokedex_preview_rev_1.png', size: 500, class: "pokedex-home" %>
      <div class="player player-back" data-home-map-target="player"></div>
    </div>
  </div>
